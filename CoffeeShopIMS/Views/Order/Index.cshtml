@{
    ViewData["Title"] = "Purchase Orders";
}
@model List<PurchaseOrder>

<div class="container">
    <div class="row pt-4">
        <div class="col-3 mx-auto pt-2 text-center">
            <h2>Purchase Order History</h2>
        </div>
    </div>
    <div class="row pt-4">
        <div class="col-6">
            <a class="btn btn-primary" asp-controller="Order" asp-action="Create">Make a purchase</a>
        </div>
    </div>
    <div class="row pt-2"></div>
</div>

@if (Model.Count == 0)
{
    <div class="row pt-10">
        <div class="text-center mx-auto pt-4">
            <h1>You haven't purchased anything. Please make a purchase'!</h1>
        </div>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Bill number</th>
                    <th>Procurement maker</th>
                    <th>Purchased at</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.OrderNumber</td>
                        <td>@order.OrderPerson</td>
                        <td>@order.CreationDate</td>
                        <td>
                            <a asp-controller="OrderDetail" asp-action="Index" asp-route-id="@order.Id"
                               class="btn btn-secondary btn-sm">Show details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}


