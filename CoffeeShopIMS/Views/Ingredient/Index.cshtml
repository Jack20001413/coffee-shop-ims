@{
    ViewData["Title"] = "Ingredients";
}
@model List<Ingredient>

<div class="container">
    <div class="row pt-4">
        <div class="col-3 mx-auto pt-2 text-center">
            <h2>Ingredients</h2>
        </div>
    </div>
    <div class="row pt-2"></div>
</div>

@if (Model.Count == 0)
{
    <div class="row pt-10">
        <div class="text-center mx-auto pt-4">
            <h1>You don't have any ingredients!</h1>
        </div>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>SKU</th>
                    <th>Current amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ingredient in Model)
                {
                    <tr>
                        <td>@ingredient.Name</td>
                        <td>@ingredient.Sku</td>
                        <td>@ingredient.Quantity</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}


