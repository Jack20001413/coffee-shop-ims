@{
    ViewData["Title"] = "Add new supplier";
}
@model Supplier

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-center">
                    <h2>Add new supplier</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label">Name</label>
                            <input type="text"  asp-for="Name" class="form-control" placeholder="Enter a name" />
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Address" class="form-label">Address</label>
                            <input type="text"  asp-for="Address" class="form-control" placeholder="Enter an address" />
                            <span class="text-danger" asp-validation-for="Address"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Add</button>
                            <a asp-controller="Supplier" asp-action="Index" class="btn btn-danger">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}